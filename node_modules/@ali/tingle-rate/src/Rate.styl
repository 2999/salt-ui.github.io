@require '../node_modules/@ali/tingle-style/src/vars.styl'

.{$prefix}-rate-item
    width 30px
    height @width
    text-align center
    overflow hidden
    -webkit-box-sizing: content-box
    -moz-box-sizing: content-box
    box-sizing: content-box
    &:first-child
        padding-left 0 !important
    &:last-child
        padding-right 0 !important
    svg
        width 100%
        height 100%
        fill #dbdbdb
    &.active svg
        fill $brand-primary

