unless $prefix is defined
    $prefix = 't'

$white = $basic-100
$title-bg = hsv(round(hsvhue($gray-darker)), round(hsvsaturation($gray-darker)), round(hsvvalue($gray-darker) - 13%), 0.5)

.{$prefix}-gallery
    .{$prefix}-slide-nav
        -webkit-box-pack end /*待验证 是否要删除*/
        -webkit-justify-content flex-end
        justify-content flex-end
        padding-right 10px
    .{$prefix}-slide-nav
        bottom 7px

.{$prefix}-gallery-item
    height 100%
    background-size cover
    background-repeat no-repeat
    background-position center center

    display -webkit-box
    display -webkit-flex
    display flex

    -webkit-box-pack end /*待验证 是否要删除*/
    -webkit-justify-content flex-end
    justify-content flex-end

    -webkit-box-orient vertical
    -webkit-box-direction normal
    -webkit-flex-direction column
    flex-direction column

    .{$prefix}-gallery-item-name
        color $white
        // background linear-gradient(to right, rgba(0,0,0,.7), rgba(0,0,0,0))
        // background -webkit-linear-gradient(left, rgba(0,0,0,.7) 0%, rgba(0,0,0,0) 100%)
        background $title-bg
        height 24px
        line-height 24px
        padding-left 10px
        padding-right 120px
        font-size 14px
        display block
