$radio-size = 22px
$radio-checked-bg = $brand-primary
$radio-disable-bg = $gray-lighter
$radio-fontSize = $font-size-17
$radio-div-height = 44px

.{$prefix}-radio-field
    display block // 这一行只是演示 按需删除

.{$prefix}-radio-field-icon-div
    width: 30px;
    min-width 20px
    min-height $radio-div-height

.{$prefix}-radio-field-icon
    vertical-align middle

 
.{$prefix}-radio-field-icon.checked > svg
    fill $radio-checked-bg
    // border 1px solid #007aff
    
.{$prefix}-radio-field-icon.noChecked > svg
    visibility hidden

.{$prefix}-radio-field-icon.disable > svg
    fill $radio-disable-bg

.{$prefix}-radio-field-text
    vertical-align middle
    font-size $font-size-field-text

    min-width 0
    min-height $radio-div-height
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

    &.disable
        color $radio-disable-bg
    



.{$prefix}-radio-field-row
    width 100%
    min-height $radio-div-height
    
    box-sizing:border-box
    background-color #fff

.{$prefix}-checkbox-label
    line-height $font-size-field-label-lh
    padding 10px 15px
    background-color $bg