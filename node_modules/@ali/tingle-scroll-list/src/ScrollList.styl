.{$prefix}-scroll-list {
    overflow: hidden;
    margin: 0;
    width: 100%;
    height: 100%;
    flex: 1;
    .pullword {
        height: 30px;
        line-height: 30px;
        text-align: center;
        color: #999;
    }
    .loading-container {
        width: 100%;
        text-align: center;
        color: #999;
        .loading {
            width: 30px;
            height: 14px;
            background: url(https://img.alicdn.com/tps/TB1fPYRMXXXXXcdXFXXXXXXXXXX-480-238.svg) center no-repeat;
            background-size: contain;
            display: inline-block;
            margin-right: 4px
            vertical-align: middle;
        }
        .loading-word {
            display: inline-block;
            line-height: 14px;
            padding-left: 0;
        }
        .icon {
            display: inline-block;

            svg {
                margin-top: -4px;
            }
        }
    }

    .empty-icon {
        background-position: center center;
        background-color: transparent;
        -webkit-background-size: contain;
        background-size: contain;
        background-repeat: no-repeat;
        height:  230px;
        margin: 0 auto 10px;
    }

    &-inner {
        min-height: 101%;
    }
    .loading-container.pull-loader {
        padding-bottom: 30px;
        padding-top: 10px;
    }
    .loading-container.push-loader {
        padding-top: 30px;
        padding-bottom: 10px;
    }
}

.vc-scrolldemo {
    color: black;
    padding: 30px 10px;
    text-align: center;
    background: #a9c8f4;
}



