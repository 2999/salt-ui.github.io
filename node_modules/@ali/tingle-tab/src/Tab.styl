// tingle-style's utils
$white = $basic-100;
$tab-bg = $white;
$tab-active-border-bottom = $brand-primary;
$tab-text = $gray;
$tab-brick-active-bg = $brand-primary;
$tab-brick-border = hsvTransform($brand-primary, 0, -50, 0) // B1_1(s-50)

$tab-head-item-height = 46px;
$tab-brick-head-item-height = 30px;


.{$prefix}-tab
    overflow hidden
    position relative

    [role="pendant"]
        display block
        position absolute
        top 0
        right 0
        height $tab-head-item-height
        line-height $tab-head-item-height
        z-index 2
        background-color $tab-bg


.{$prefix}-tab-head
    width 100%
    overflow hidden
    background-color $tab-bg
    height $tab-head-item-height + 1px
    border-bottom 1px solid $border

.{$prefix}-tab-head-scroll
    //足够大，内部可放置更多 item
    white-space nowrap

.{$prefix}-tab-head-container
    height 100%

.{$prefix}-tab-head-item
    padding 0 12px
    height $tab-head-item-height
    line-height $tab-head-item-height
    overflow hidden
    cursor pointer
    color $tab-text
    font-size $font-size-t4
    &.active
        color $brand-primary
        border-bottom 2px solid $tab-active-border-bottom

.hairline
    .{$prefix}-tab-head
        border-bottom-width .5px

.brick
    $padding = ($tab-head-item-height - $tab-brick-head-item-height) / 2;

    .{$prefix}-tab-head
        padding $padding 0
        border 0
    .{$prefix}-tab-head-container
        background-color $tab-bg
        padding 0 12px
        margin 0 auto

    .{$prefix}-tab-head-item
        color $brand-primary
        font-size $font-size-t3
        line-height $font-size-t3-lh
        height $tab-brick-head-item-height
        padding 0
        padding-top 5px
        border-top 1px solid $tab-brick-active-bg
        border-bottom 1px solid $tab-brick-active-bg
        border-left 1px solid $tab-brick-border
        border-right none
        &:first-child
            border-top-left-radius $tab-radius
            border-bottom-left-radius $tab-radius
            border-left 1px solid $tab-brick-active-bg
        &:last-child
            border-top-right-radius $tab-radius
            border-bottom-right-radius $tab-radius
            border-right 1px solid $tab-brick-active-bg
        &.active
            background $tab-brick-active-bg
            color $white
            border-left 1px solid $tab-brick-active-bg
            & + .t-tab-head-item
                border-left 1px solid $tab-brick-active-bg


.fixed-top
    .{$prefix}-tab-head
        position fixed
        top 0
        left 0
        right 0
        z-index 2

    > .{$prefix}-tab-body
        margin-top $tab-head-item-height + 1px


.fixed-bottom
    .{$prefix}-tab-head
        position fixed
        bottom 0
        left 0
        right 0
        z-index 2

    > .{$prefix}-tab-body
        margin-bottom $tab-head-item-height + 1px


