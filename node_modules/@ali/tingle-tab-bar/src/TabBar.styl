$tabBarZIndex = 80
$tabBarHeight = 50px
$tabBarBgColor = hsv(round(hsvhue($basic-100)), round(hsvsaturation($basic-100)), round(hsvvalue($basic-100) - 2%))
$tabBarBorderColor = hsv(round(hsvhue($basic-600)), round(hsvsaturation($basic-600)), round(hsvvalue($basic-600) - 2%))

$tabBarItemIconSize = 25px
$tabBarItemFontSize = $font-size-t1
$tabBarItemLineHeight = $font-size-t1-lh
$tabBarItemBorderRadius = 0

$tabBarItemBaseColor = hsv(round(hsvhue($gray-light)), round(hsvsaturation($gray-light)), round(hsvvalue($gray-light) - 3%))
$tabBarItemActiveColor = $brand-primary

$tabBarBadgePointSize = 10px

.{$prefix}-tab-bar
  display block

// 这一行只是演示 按需删除

.{$prefix}-tab-bar-contents
  position fixed
  top 0
  left 0
  right 0
  bottom $tabBarHeight

.{$prefix}-tab-bar-content
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  overflow scroll
  -webkit-overflow-scrolling touch
  display none
  &.active
    display block

.{$prefix}-tab-bar-items
  position fixed
  bottom 0
  left 0
  right 0
  z-index $tabBarZIndex
  background $tabBarBgColor
  height $tabBarHeight
  hairline('border-top', $tabBarBorderColor)

.{$prefix}-tab-bar-item
  position relative
  text-align center
  color $tabBarItemBaseColor
  &.active
    color $tabBarItemActiveColor

.{$prefix}-tab-bar-item-label
  display block
  font-size $tabBarItemFontSize
  line-height $tabBarItemLineHeight

.{$prefix}-tab-bar-item-img-icon
  display block
  margin 0 auto
  width $tabBarItemIconSize
  height $tabBarItemIconSize

.{$prefix}-tab-bar-item-icon
  display inline-block
  position relative

.{$prefix}-tab-bar-item-tingle-icon svg
  fill $tabBarItemBaseColor

.active > .{$prefix}-tab-bar-item-icon svg
  fill $tabBarItemActiveColor

.{$prefix}-tab-bar-item-badge
  position absolute
  top 0
  left 100%
  margin-left -8px
  display inline-block
  padding 0 3px
  min-width 16px
  line-height 16px
  font-size $tabBarItemFontSize
  color #fff
  text-align center
  background $function-red
  border-radius 8px
  z-index 1
  &.point
    min-width $tabBarBadgePointSize
    height $tabBarBadgePointSize
    border-radius $tabBarBadgePointSize / 2
