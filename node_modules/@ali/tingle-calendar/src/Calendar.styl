mainColor = #fb8c00

.{$prefix}-calendar-container
  width 100%
  height 100%
.{$prefix}-calendar
  -webkit-user-select none
  user-select none
  font-size 14px
  font-family "Microsoft Yahei", "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif
  background white
  overflow auto
  width 100%
  position absolute
  bottom 0
  .{$prefix}-tool
    border-top 1px solid #d5d5d5
    border-bottom 1px solid #d5d5d5
    height 50px
    font-size 16px
    background #fff
    color #666666
    .{$prefix}-btn
      width 40px  
      height 40px
    .{$prefix}-prev-month
      width 80px
      font-size 20px
      line-height 40px
      text-align center
      color #F60
    .{$prefix}-next-month
      width 80px
      font-size 20px
      line-height 40px
      text-align center
      color #F60
    .{$prefix}-text
      margin 0 8px
  .{$prefix}-week
    background #e6e6e6
    padding 10px 0
    text-align center
    color #666666
    font-size 12px
  .{$prefix}-month
    background #fff
    color #7b7b7b
    & > div
      & > div
        text-align center
        padding 10px
        border-bottom 1px solid #dbdbdb
        border-right 1px solid #dbdbdb
    .{$prefix}-date-point
      height 26px
      line-height 26px
      border-radius 50%
      width 26px
      margin 0 auto
    .{$prefix}-day-tip
      height 14px
      line-height 14px
      -webkit-transform scale(0.9)
      transform scale(0.9)
      line-height 1
      font-size 12px
      color #fff
    .{$prefix}-gray
      .{$prefix}-date-point
        background #cdcccc
        color #fff
    .{$prefix}-selected
      .{$prefix}-date-point
        color #fff
        background mainColor
      &.{$prefix}-PM
        .{$prefix}-date-point
          background #d94cfc
          color #fff
  .{$prefix}-half-wrap
    padding 0 20px
    border-top 1px solid #e2e2e2
    height 60px
    background #fff
    .{$prefix}-day
      display inline-block
      width 48px
      text-align center
      height 48px
      line-height 30px
      -webkit-border-radius 24px
      border-radius 24px
      background #cdcccc
      color #fff
      border 7px solid #fff
      span
        line-height 34px
        display block
        font-size 12px
        -webkit-transform scale(0.9)
        transform scale(0.9)
    .now
      &.{$prefix}-morning
        background #30dbfa
      &.{$prefix}-afternoon
        background #d94cfc
      &.{$prefix}-full-day
        background mainColor
  .{$prefix}-operate
    border-top 1px solid #e2e2e2
    text-align center
    background #ddd
    width 100%
    position absolute
    bottom 0
    span
      font-size 17px
      display inline-block
      height 44px
      line-height 44px
      width 33.33%
    .{$prefix}-confirm
      background mainColor
      color #fff
      &.{$prefix}-gray
        opacity 0.5
    .{$prefix}-reset
      background #ffd1b3
      color mainColor
    .{$prefix}-cancel
      background #f8f8f8
      color #222
  .{$prefix}-top-panel
    height 44px
    background #E6E6E6
    span
      display inline-block
      line-height 18px
      padding 13px
    .{$prefix}-top-panel-title
      width 100%
      color #666
      font-size 16px
      text-align center
    .{$prefix}-top-panel-confirm
      color #FF6602
      position absolute
      font-size 14px
      right 0   
    .{$prefix}-top-panel-cancel
      color #666
      font-size 14px
      position absolute
      left 0
  .{$prefix}-tap
    &.{$prefix}-op
      &.active
        opacity 0.5
  .{$prefix}-tap.{$prefix}-op.disabled
    color: #ccc;
    background: #e8e8e8;
    pointer-events: none;

  .{$prefix}-month-list
    .{$prefix}-month-list-item
      display inline-block
      width 33.33%
      text-align center
      line-height 44px
      border 1px solid #dbdbdb
      border-top none
      border-left none
      color #757575
      &.active
        background mainColor
        color white
  .{$prefix}-year-list
    .{$prefix}-year-list-item
      display inline-block
      width 33.33%
      text-align center
      line-height 44px
      border 1px solid #dbdbdb
      border-top none
      border-left none
      color #757575
      &.active
        background mainColor
        color white
  .{$prefix}-month
    .{$prefix}-weekend
      color mainColor
    .{$prefix}-prev-month
      background #f2f2f2
    .{$prefix}-next-month
      color #ccc
    .{$prefix}-selected
      background mainColor
    .{$prefix}-AM
      background #30dbfa
    .{$prefix}-PM
      background #d94cfc
  &.{$prefix}-default
    .{$prefix}-month
      .{$prefix}-selected
        .{$prefix}-date-point
          opacity 0.7
  &.{$prefix}-circle
    .{$prefix}-month
      .{$prefix}-now
        .{$prefix}-date-point
          border-radius 13px
          border 1px solid #979797
          width 26px
          margin 0 auto
          background #fff
          color #7b7b7b

.{$prefix}-calendar .{$prefix}-month .{$prefix}-selected.{$prefix}-AM .{$prefix}-date-point,
.{$prefix}-calendar .{$prefix}-month .{$prefix}-blue .{$prefix}-date-point
  background #30dbfa
  color #fff

@media screen and (min-width: 320px) and (max-width: 359px)
  body
    .{$prefix}-calendar
      .{$prefix}-month
        .{$prefix}-date-point
          height 24px
          line-height 24px
        .{$prefix}-day-tip
          height 12px
          line-height 12px
        .{$prefix}-now .{$prefix}-date-point,
        .{$prefix}-selected .{$prefix}-date-point
          border-radius 12px
          width 24px