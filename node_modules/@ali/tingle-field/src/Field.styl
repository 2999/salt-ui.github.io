$min-height = 44px;

.{$prefix}-field
    font-size $font-size-field-text
    color $text-primary

.{$prefix}-field-icon
    margin 0 6px

.{$prefix}-field-box
    min-height 44px
    line-height $font-size-field-text-lh
    padding-left 15px

.{$prefix}-field-layout-h-label
    padding (($min-height - $font-size-field-label-lh) / 2) 0
    width 100px
    line-height $font-size-field-label-lh
    .{$prefix}-field-box.loose &
        width auto
        max-width 50%
    .{$prefix}-field-box.vertical &
        width auto
        padding 4px 0

.{$prefix}-field-layout-v-label
    hairline border-bottom $border
    line-height $font-size-field-label-lh
    padding 10px 15px
    background-color $bg

.{$prefix}-field-multi
    padding (($min-height - $font-size-field-label-lh) / 2) 0

.{$prefix}-field-layout-label-required
    display inline
    svg
        vertical-align middle

