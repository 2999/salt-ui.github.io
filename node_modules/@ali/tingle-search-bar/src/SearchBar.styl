$searchBarZIndex = 90
$searchBarHeight = 46px
$searchBarBtnWidth = 50px
$searchBarBtnWidthEn = 68px
$searchBarInputHeight = 26px
$searchBarInputRadius = 4px
$searchBarIconSpace = 30px
$searchBarHistoryHeaderHeight = 30px

$searchBarWrapperBg = $basic-100
$searchBaInputBg = $basic-600
$searchBarListBg = $basic-400
$searchBarPlaceholderColor = #BCBCBC

$searchBarHistoryActionColor = $function-blue
$searchBarHistoryHeaderColor = $text-helper
$searchBarHistoryListColor = $text-seconary

$searchBarWrapperPadding = ($searchBarHeight - $searchBarInputHeight) / 2

.{$prefix}-search-bar
    display block

// 这一行只是演示 按需删除

/* input wrapper */
.{$prefix}-search-bar-wrapper
    position relative
    background $searchBarWrapperBg
    padding $searchBarWrapperPadding
    height $searchBarHeight
    overflow-x hidden
    box-shadow 0 1px 0 0 $basic-500

.{$prefix}-search-bar-box
    position relative
    text-align center
    background-color: #fff
    border-radius $searchBarInputRadius

.{$prefix}-search-bar-holder-wrapper
    position absolute
    text-align center
    left 0
    top 0
    right 0
    bottom 0
    z-index 10
    color $searchBarPlaceholderColor
    background $searchBaInputBg
    height $searchBarInputHeight
    line-height $searchBarInputHeight
    border-radius $searchBarInputRadius

.{$prefix}-search-bar-holder
    position relative
    padding-left $searchBarIconSpace
    display inline-block

.{$prefix}-search-bar-btn
.{$prefix}-search-bar-input
    height $searchBarInputHeight

.{$prefix}-search-bar-btn
    color $brand-primary
    position absolute
    top $searchBarWrapperPadding
    right (- $searchBarBtnWidth)
    width $searchBarBtnWidth
    line-height $searchBarInputHeight
    font-size 15px
    text-align right
    padding-right 10px
    background transparent
    z-index 99

.{$prefix}-search-bar-input[type="search"]
    width 100%
    padding-left $searchBarIconSpace
    padding-right $searchBarIconSpace
    background $searchBaInputBg
    border-radius $searchBarInputRadius
    border none
    outline none
    color $text-primary
    -webkit-appearance none
    box-sizing border-box
    line-height $searchBarInputHeight - 8

/* icon search&cross*/
.{$prefix}-search-bar-icon-cross
.{$prefix}-search-bar-icon-search
    display inline-block
    position absolute
    top 50%
    -webkit-transform translateY(-50%)
    transform translateY(-50%)
    svg
        vertical-align middle

.{$prefix}-search-bar-icon-search
    left 6px

.{$prefix}-search-bar-icon-cross
    right 6px
    -webkit-transform scale(0) translateY(-50%)
    transform scale(0) translateY(-50%)
    transform-origin center top
    &.active
        -webkit-transform scale(1) translateY(-50%)
        transform scale(1) translateY(-50%)

/* active */
.{$prefix}-search-bar.active
    .{$prefix}-search-bar-wrapper
        position fixed
        top 0
        left 0
        right 0
        z-index $searchBarZIndex
        padding-right $searchBarBtnWidth
    .{$prefix}-search-bar-btn
        right 0

/* list */
.{$prefix}-search-bar-list
    position fixed
    top $searchBarHeight
    left 0
    right 0
    bottom 0
    z-index $searchBarZIndex
    background $searchBarListBg
    -webkit-overflow-scrolling touch

.{$prefix}-search-bar-result
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    display none
    &.active
        display block

.{$prefix}-search-bar-wrapper
.{$prefix}-search-bar-btn
.{$prefix}-search-bar-icon-cross
    -webkit-transition all 0.25s
    transition all 0.25s

.{$prefix}-search-bar-history
    display none
    &.active
        display block

.{$prefix}-search-bar-history-list
    margin 5px 0
    & > li
        & > span
            max-width 60%
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            display inline-block
            padding 8px 10px
            border-radius 1em
            color $searchBarHistoryListColor

.{$prefix}-search-bar-history-header
    font-size 12px
    padding 0 $searchBarWrapperPadding
    height $searchBarHistoryHeaderHeight
    line-height $searchBarHistoryHeaderHeight
    color $searchBarHistoryHeaderColor

.{$prefix}-search-bar-history-action
    float right
    padding-left 20px
    color $function-blue
    letter-spacing 1px

/* style in en */
.{$prefix}-search-bar.en_US
    .{$prefix}-search-bar-btn
        right (- $searchBarBtnWidthEn)
        width $searchBarBtnWidthEn

    &.active
        .{$prefix}-search-bar-btn
            right 0
        .{$prefix}-search-bar-wrapper
            padding-right $searchBarBtnWidthEn
