// tingle-style's utils
.{$prefix}-textarea-field-content
    position relative
    padding 0 18px 0 0
    border none
    outline none
    width 100%
    background-color transparent
    z-index 2
    resize none

    &::-webkit-scrollbar-track
        background-color transparent;
    &::-webkit-scrollbar
        width 6px
        background-color #fff
    &::-webkit-scrollbar-thumb
        background-color #ddd
        radius 3px
    &::-webkit-input-placeholder
        color $gray-lighter

.readonly
    .{$prefix}-textarea-field-content
        color $gray-lighter
