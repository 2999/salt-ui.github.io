.{$prefix}-photo-item {
    padding: 10px 20px 0 0;

    img {
        width: 100%;
        height: 100%;
        background-repeat: no-repeat;
        -moz-background-size: cover;
        -ms-background-size: cover;
        -webkit-background-size: cover;
        background-size: cover;
    }

}

.{$prefix}-photo-field {
    overflow: hidden;

    .{$prefix}-field-box {
        min-height: 44px;
        line-height: 20px;
        padding-left: 15px;
    }

    .{$prefix}-field-layout-h-label {
        padding: 12px 0;
        width: 100px;
        line-height: 20px;
    }
    .{$prefix}-select-field-placeholder {
        color: #ccc;
    }
}

.{$prefix}-photo-icon {
    margin-right: 12px;
}

.{$prefix}-photo-list {
    padding: 0 15px 30px 15px;
    width: 100%;
    overflow: hidden;
}

.{$prefix}-photo-delete {
    background: url(//img.alicdn.com/tps/TB1pAbyKpXXXXbuXFXXXXXXXXXX-32-32.png) no-repeat;
    background-size: 16px 16px;
    width: 16px;
    height: 16px;
    top: 2px;
    right: 12px;
    z-index: 2;
}

