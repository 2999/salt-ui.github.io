 @require './SelectLayer'
 
$checkbox-checked-bg = $brand-primary
$checkbox-disable-bg = $gray-lighter
$checkbox-readonly-color = $gray-lighter
$checkbox-tip-color = $gray-lighter
$checkbox-div-height = 44px

.{$prefix}-checkbox-field
    display block
    > .{$prefix}-field-box
        align-items: flex-start
.{$prefix}-checkbox-field-value-wrap
    padding 12px 0
.{$prefix}-checkbox-field-readonly
    color $checkbox-readonly-color
    background-color #f9f9f9
    img
        opacity 0.6
    .{$prefix}-checkbox-field-row
            background-color transparent
    > .{$prefix}-group-list
        background-color #f9f9f9
        

// 这一行只是演示 按需删除

.{$prefix}-checkbox-field-icon-div
    width 26px
    min-width 26px
    min-height $checkbox-div-height
    
    vertical-align middle

.{$prefix}-checkbox-field-placeholder
    max-width 100%
    height 20px
    line-height 20px
    text-align right
    color $checkbox-tip-color
    
.{$prefix}-checkbox-field-icon-slot 
    margin-top 10px
    svg
        fill $checkbox-tip-color
        
.{$prefix}-checkbox-field-icon-list
    width 26px
    height 26px
    background-color $checkbox-checked-bg
    border-radius 50%
    fill #fff
    vertical-align middle
    
    &.noChecked 
        border 1px solid $checkbox-disable-bg
        background-color #fff
    &.noChecked.disable
        background-color #ccc    
    

.{$prefix}-checkbox-field-icon-list > svg
    border-radius 11px
.{$prefix}-checkbox-field-icon[name="check"]  > svg
    border 1px solid $checkbox-checked-bg
    
.{$prefix}-checkbox-field-icon.checked > svg
    fill $checkbox-checked-bg
    background-color #fff
    border none
    
.{$prefix}-checkbox-field-icon.noChecked > svg
    fill #000
    border 1px solid $checkbox-disable-bg
    background-color #fff

.{$prefix}-checkbox-field-icon.disable > svg
    background-color: #fff;
    border: none;
    fill: #ccc;

.{$prefix}-checkbox-field-text
    min-width 0
    min-height $checkbox-div-height
    padding-left 18px
    vertical-align middle
    
    font-size $font-size-field-text
    
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap

.{$prefix}-checkbox-field-row
    width 100%
    min-height $checkbox-div-height
    box-sizing: border-box
    background-color $white

.{$prefix}-checkbox-label
    line-height $font-size-field-label-lh
    padding 10px 15px
    background-color $bg
    font-size: 100%;
    color: #222;

.{$prefix}-field-layout-label-required
    display inline
    svg
        vertical-align middle