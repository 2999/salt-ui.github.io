unless $prefix is defined
    $prefix = 't'

$line_color = hsv(round(hsvhue($basic-600)), round(hsvsaturation($basic-600)), round(hsvvalue($basic-600) - 2%))

.{$prefix}-grid-cell-full
    width 100%
    height 100%

.{$prefix}-grid
    hairline 'border-top' $line_color

.{$prefix}-grid-row
    hairline 'border-bottom' $line_color

.{$prefix}-grid-item + .{$prefix}-grid-item
    hairline 'border-left' $line_color

.{$prefix}-grid.{$prefix}-no-line
    border-top none !important
    .{$prefix}-grid-item + .{$prefix}-grid-item
        border-left none !important
    .{$prefix}-grid-row
        border-bottom none !important

.{$prefix}-grid-touchable
    .{$prefix}-grid-item:active
        background-color hsv(round(hsvhue($basic-100)), round(hsvsaturation($basic-100)), round(hsvvalue($basic-100) - 6%))
        border-color hsv(round(hsvhue($basic-600)), round(hsvsaturation($basic-600)), round(hsvvalue($basic-600) - 2%))
