unless $prefix is defined
    $prefix = 't'

.{$prefix}-dialog
  padding-top 13px
  background $white
  border-radius 5px
  width 260px
  margin auto
  box-shadow 0 2px 5px rgba(0,0,0,0.2)

.{$prefix}-dialog-title
  color $text-primary
  font-size 16px
  font-weight bold
  padding-bottom 13px
  padding-top 7px
  text-align center

.{$prefix}-dialog-content
  padding 0 15px 13px
  line-height 22px
  font-size 12px
  margin 0 auto
  color $text-seconary

.{$prefix}-dialog-operation
  hairline 'border-top' $border
  height 50px
  font-size 16px
  line-height 50px
  text-align center
  .{$prefix}-dialog-button
    hairline 'border-left' $border
    &.hover
      background rgba(238, 238, 238, 0.4)
    &:first-child
      border-left 0

.{$prefix}-dialog-brbl5
  border-bottom-left-radius 5px

.{$prefix}-dialog-brbr5
  border-bottom-right-radius 5px

.{$prefix}-dialog-primary
  color $brand-primary

.{$prefix}-dialog-secondary
  color $gray-light

.{$prefix}-dialog-overlay
    position fixed
    top 0
    left 0
    z-index 100
    width 100%
    height 100%
    background-color rgba(0,0,0,.6)
    display flex
    display -webkit-box
    display -webkit-flex
    -webkit-box-align center
    -webkit-align-items center
    align-items center
    > .{$prefix}-dialog-overlay-inner
        flex 1
        -webkit-flex 1
        -webkit-box-flex 1

// React Animation Group
.{$prefix}-dialog-fade-appear
    opacity 0.01
    .{$prefix}-dialog
        transform scale(1.4)
        -webkit-transform scale(1.4)
        opacity 0.01
    &.{$prefix}-dialog-fade-appear-active
        opacity 1
        transition opacity .1s ease-in
        .{$prefix}-dialog
            transform scale(1)
            -webkit-transform scale(1)
            opacity 1
            transition all .25s ease
            -webkit-transition all .25s ease

.{$prefix}-dialog-fade-enter
    opacity 0.01
    .{$prefix}-dialog
        transform scale(1.4)
        -webkit-transform scale(1.4)
        opacity 0.01
    &.{$prefix}-dialog-fade-enter-active
        opacity 1
        transition: opacity .1s ease
        .{$prefix}-dialog
            transform scale(1)
            -webkit-transform scale(1)
            opacity 1
            transition all .25s ease
            -webkit-transition all .25s ease

.{$prefix}-dialog-fade-leave
    opacity 1
    &.{$prefix}-dialog-fade-leave-active
        opacity: 0.01;
        transition: opacity .2s ease-in;
