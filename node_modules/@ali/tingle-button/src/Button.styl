// White
$white = $basic-100;

// primary button colors
$button-primary-bg = $brand-primary
$button-primary-color = $white
$button-primary-bg-active = hsv(round(hsvhue($brand-primary)), round(hsvsaturation($brand-primary) + 4%), round(hsvvalue($brand-primary) - 1%));
$button-primary-color-active = $white

// secondary button colors
$button-secondary-bg = $basic-400
$button-secondary-color = $text-seconary
$button-secondary-border-color = $border
$button-secondary-bg-active = hsv(round(hsvhue($button-secondary-bg)), round(hsvsaturation($button-secondary-bg)), round(hsvvalue($button-secondary-bg) - 5%))
$button-secondary-color-active = $text-seconary
$button-secondary-border-color-active = hsv(round(hsvhue($button-secondary-border-color)), round(hsvsaturation($button-secondary-border-color)), round(hsvvalue($button-secondary-border-color) - 5%))

// minor button colors
$button-minor-bg = $white
$button-minor-color = $brand-primary
$button-minor-border-color = $brand-primary
$button-minor-bg-active = hsv(round(hsvhue($brand-primary)), round(hsvsaturation($brand-primary) - 76%), round(hsvvalue($brand-primary) + 5%))
$button-minor-color-active = $brand-primary
$button-minor-border-color-active = hsv(round(hsvhue($brand-primary)), round(hsvsaturation($brand-primary) + 4%), round(hsvvalue($brand-primary) - 1%))

// dangerous button colors
$button-danger-bg = $function-red
$button-danger-color = $white
$button-danger-bg-active = darken($button-danger-bg, 25%)
$button-danger-color-active = $white

// pure text button
$button-text-bg = transparent
$button-text-color = $function-blue
$button-text-disabled-color = $text-disabled

// disabled button
$button-disabled-bg = $basic-600
$button-disabled-color = $text-disabled
$button-disabled-border-color = $basic-700

.{$prefix}-button
  white-space nowrap
  border none
  outline none
  height 40px
  font-size 16px
  radius $button-radius
  padding 0
  margin 0
  text-align center
  // https://developer.mozilla.org/en-US/docs/Web/CSS/-webkit-tap-highlight-color
  -webkit-tap-highlight-color transparent
  &.disabled
  &[disabled]
    color $button-disabled-color
    background $button-disabled-bg
    hairline('border', $button-disabled-border-color)
    pointer-events none

/* Size */
.{$prefix}-button-small
.{$prefix}-button-small[disabled]
    height 24px
    font-size 12px
.{$prefix}-button-large
.{$prefix}-button-large[disabled]
    height 44px
    font-size 18px

/* Color Theme */
.{$prefix}-button-primary
  background $button-primary-bg
  color $button-primary-color
  &:active
    background $button-primary-bg-active
    color $button-primary-color-active

.{$prefix}-button-secondary
  background $button-secondary-bg
  color $button-secondary-color
  hairline('border', $button-secondary-border-color)
  &:active
    background $button-secondary-bg-active
    color $button-secondary-color-active
    border-color $button-secondary-border-color-active

.{$prefix}-button-minor
  background $button-minor-bg
  color $button-minor-color
  hairline('border', $button-minor-border-color)
  &:active
    background $button-minor-bg-active
    color $button-minor-color-active
    border-color $button-minor-border-color-active

.{$prefix}-button-danger
  background $button-danger-bg
  color $button-danger-color
  &:active
    background $button-danger-bg-active
    color $button-danger-color-active

.{$prefix}-button-text
  background $button-text-bg
  color $button-text-color
  &:active
    color lighten($button-text-color, 50%)
  &.disabled
  &.disabled:hover
    background $button-text-bg
    color $button-text-disabled-color
    border-color $button-disabled-border-color
